<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/routineday_page_exercise_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:text="Exercise Name"
            android:textColor="@color/darkGray"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/routineday_page_set1_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/routineday_page_set2_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview">

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set1_button"
                style="@style/ExerciseSetButton"
                tools:text="5" />

            <TextView
                android:id="@+id/routineday_page_set1_weight_textview"
                style="@style/ExerciseSetWeightTextView"
                tools:text="260lbs"/>

            <View
                android:id="@+id/routineday_page_set1_weight_underline"
                style="@style/ExerciseSetWeightUnderline"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/routineday_page_set2_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/routineday_page_set3_layout"
            app:layout_constraintStart_toEndOf="@id/routineday_page_set1_layout"
            app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview">

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set2_button"
                style="@style/ExerciseSetButton"
                tools:text="5" />

            <TextView
                android:id="@+id/routineday_page_set2_weight_textview"
                style="@style/ExerciseSetWeightTextView"
                tools:text="260lbs"/>

            <View
                android:id="@+id/routineday_page_set2_weight_underline"
                style="@style/ExerciseSetWeightUnderline"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/routineday_page_set3_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/routineday_page_set4_layout"
            app:layout_constraintStart_toEndOf="@id/routineday_page_set2_layout"
            app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview">

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set3_button"
                style="@style/ExerciseSetButton"
                tools:text="5" />

            <TextView
                android:id="@+id/routineday_page_set3_weight_textview"
                style="@style/ExerciseSetWeightTextView"
                tools:text="260lbs"/>

            <View
                android:id="@+id/routineday_page_set3_weight_underline"
                style="@style/ExerciseSetWeightUnderline"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/routineday_page_set4_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/routineday_page_set5_layout"
            app:layout_constraintStart_toEndOf="@id/routineday_page_set3_layout"
            app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview">

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set4_button"
                style="@style/ExerciseSetButton"
                tools:text="5" />

            <TextView
                android:id="@+id/routineday_page_set4_weight_textview"
                style="@style/ExerciseSetWeightTextView"
                tools:text="260lbs"/>

            <View
                android:id="@+id/routineday_page_set4_weight_underline"
                style="@style/ExerciseSetWeightUnderline"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/routineday_page_set5_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/routineday_page_set4_layout"
            app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview">

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set5_button"
                style="@style/ExerciseSetButton"
                tools:text="5" />

            <TextView
                android:id="@+id/routineday_page_set5_weight_textview"
                style="@style/ExerciseSetWeightTextView"
                tools:text="260lbs"/>

            <View
                android:id="@+id/routineday_page_set5_weight_underline"
                style="@style/ExerciseSetWeightUnderline"/>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
