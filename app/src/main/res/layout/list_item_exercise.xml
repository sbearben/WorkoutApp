<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_margin="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/routineday_page_exercise_name_textview">

            <TextView
                android:id="@+id/routineday_page_exercise_name_textview2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Exercise Name"
                android:textColor="@color/darkGray"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set1_button"
                style="@style/ExerciseSetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/routineday_page_set2_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview2" />

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set2_button"
                style="@style/ExerciseSetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/routineday_page_set3_button"
                app:layout_constraintStart_toEndOf="@id/routineday_page_set1_button"
                app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview2" />

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set3_button"
                style="@style/ExerciseSetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/routineday_page_set4_button"
                app:layout_constraintStart_toEndOf="@id/routineday_page_set2_button"
                app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview2" />

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set4_button"
                style="@style/ExerciseSetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/routineday_page_set5_button"
                app:layout_constraintStart_toEndOf="@id/routineday_page_set3_button"
                app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview2" />

            <com.bignerdranch.android.workoutapp.SquareButton
                android:id="@+id/routineday_page_set5_button"
                style="@style/ExerciseSetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/routineday_page_set4_button"
                app:layout_constraintTop_toBottomOf="@id/routineday_page_exercise_name_textview2" />




        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

